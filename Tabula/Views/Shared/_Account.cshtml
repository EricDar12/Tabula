<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootswatch/lux/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="d-flex flex-column overflow-auto">
    <header class="d-flex justify-content-center mt-4">
        <h1 class="display-3 text-primary fw-bold">Tabula</h1>
    </header>
    <main class="flex-grow-1 d-flex align-items-center justify-content-center justify-content-md-start pt-md-5">
        <div class="container">
            @RenderBody()
        </div>
    </main>
    <footer class="mt-4 py-3">
        <div class="container d-flex justify-content-center">
            <small class="text-muted">
                © @DateTime.Now.Year Tabula
            </small>
        </div>
    </footer>
    @RenderSection("Scripts", required: false)
</body>
</html>