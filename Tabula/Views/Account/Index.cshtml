@model Tabula.Models.Account.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "_Account";
}

<div class="row justify-content-center h-auto w-auto mt-4">
    <div class="col-md-5">
        <div class="card shadow-lg border-secondary-subtle rounded">
            <div class="card-body">
                <div class="border-bottom my-2">
                    <h3 class="text-center text-primary pb-lg-3">Log in</h3>
                </div>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <form asp-controller="Account" asp-action="LogIn" method="post">
                    @Html.AntiForgeryToken()
                    <div class="my-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control @(ViewData.ModelState["Email"]?.Errors.Any() == true ? "is-invalid" : "")" />
                        <span asp-validation-for="Email" class="invalid-feedback"></span>
                    </div>
                    <div class="my-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" type="password" class="form-control @(ViewData.ModelState["Password"]?.Errors.Any() == true ? "is-invalid" : "")" />
                        <span asp-validation-for="Password" class="invalid-feedback"></span>
                    </div>
                    <div class="form-check mt-3">
                        <input asp-for="RememberMe" class="form-check-input" type="checkbox"/>
                        <label asp-for="RememberMe" class="form-check-label"></label>
                    </div>  
                    <button type="submit" class="btn btn-primary w-100 my-3">Log in</button>
                    <a asp-action="Registrationpage" asp-controller="Account" class="text-center mt-3 d-block">Need an account?</a>
                </form>
            </div>
        </div>
    </div>
</div>
